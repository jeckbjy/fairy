{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "isShellCommand": true,
    "showOutput": "always",
    "command": "go",
    "options": {
        "env": {
            "GOPATH": "${workspaceRoot}"
        }
    },
    "tasks": [
        {
            "taskName": "run",
            "args": [
                "${workspaceRoot}/src/fairy-ztest/main.go"
            ],
            "isBuildCommand": true,
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "taskName": "install",
            "args": [],
            "isBuildCommand": true
        },
        {
            "taskName": "build",
            "args": [
                "-o",
                "${workspaceRoot}/bin/test",
                "${workspaceRoot}/src/fairy-ztest/main.go"
            ],
            "isBuildCommand": true,
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}